{
  "json.format.enable": true,
  "codeLens.enable": true,
  "diagnostic.enableMessage": "jump",
  "notification.disabledProgressSources": [
    "*"
  ],
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "html",
    "Markdown",
    "typescript",
    "javascript",
    "javasscriptreact",
    "typescriptreact",
    "json",
    "elm",
    "haskell"
  ],
  "languageserver": {
    "elmLS": {
      "command": "elm-language-server",
      "filetypes": [
        "elm"
      ],
      "rootPatterns": [
        "elm.json"
      ]
    },
    "sourcekit-lsp": {
      "filetypes": [
        "swift"
      ],
      "command": "sourcekit-lsp"
    },
    "csharp-ls": {
      "command": "csharp-ls",
      "filetypes": [
        "cs"
      ],
      "rootPatterns": [
        "*.csproj",
        ".vim/",
        ".git/",
        ".hg/"
      ]
    },
    "haskell": {
      "initializationOptions": {
        "languageServerHaskell": {
          "formattingProvider": "fourmolu"
        }
      },
      "command": "haskell-language-server-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": [
        "haskell",
        "lhaskell"
      ]
    }
  }
}
